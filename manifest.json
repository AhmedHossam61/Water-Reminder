{
  "manifest_version": 3,
  "name": "Water Reminder",
  "version": "1.0",
  "description": "Reminds you to drink water at regular intervals",
  "permissions": ["alarms", "storage", "notifications", "offscreen"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}